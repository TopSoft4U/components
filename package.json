{
  "name": "@topsoft4u/components",
  "license": "UNLICENSED",
  "version": "1.0.4",
  "description": "Shared React components",
  "repository": "git://github.com/TopSoft4U/components.git",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "author": "≈Åukasz Kolasa",
  "files": [
    "dist",
    "style"
  ],
  "main": "src/index.ts",
  "scripts": {
    "build": "yarn run clean && yarn run eslint && tsc",
    "typecheck": "tsc -p ./ --noEmit",
    "clean": "rimraf --no-glob ./dist",
    "eslint": "eslint --ext js,jsx,ts,tsx src --fix",
    "deps:check": "npx npm-check-updates --dep prod,dev,optional",
    "deps:update": "npx npm-check-updates --dep prod,dev,optional -u",

    "generate_indexes": "barrelsby --delete --directory ./src",
    "preversion": "yarn run build",
    "postpublish": "git push --all origin -u && git push --tags origin"
  },
  "dependencies": {
    "js-cookie": "^2.2.1"
  },
  "devDependencies": {
    "@types/js-cookie": "^2.2.6",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.56",
    "@types/react-router-dom": "^5.1.6"
  },
  "peerDependencies": {
    "bootstrap": "^4.5.3",
    "next": "^10.0.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-bootstrap": "^1.4.0",
    "next-translate": "^1.0.1"
  }
}
